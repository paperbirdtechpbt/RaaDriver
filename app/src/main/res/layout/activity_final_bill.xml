<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.FinalBillActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="25dp"
            android:background="@drawable/linearlayout"
            android:elevation="15dp"
            android:orientation="vertical"
            android:paddingLeft="15dp">

            <com.pbt.raadrivers.Fonts.CTextView
                android:id="@+id/startkm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Strat KM"
                android:textColor="@color/bleck"
                android:textSize="18dp" />

            <com.pbt.raadrivers.Fonts.CTextView
                android:id="@+id/endkm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="End Km"
                android:textColor="@color/bleck"
                android:textSize="18dp" />

            <com.pbt.raadrivers.Fonts.CTextView
                android:id="@+id/totalkm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Total KM "
                android:textColor="@color/bleck"
                android:textSize="18dp" />

            <com.pbt.raadrivers.Fonts.CTextView
                android:id="@+id/estimated_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Estimated Price"
                android:visibility="gone"
                android:textColor="@color/bleck"
                android:textSize="18dp" />

            <com.pbt.raadrivers.Fonts.CTextView
                android:id="@+id/total_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="total_time"
                android:textColor="@color/bleck"
                android:textSize="18dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.pbt.raadrivers.Fonts.CTextView
                    android:id="@+id/acual_price1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Ride base price"
                    android:textColor="@color/bleck"
                    android:textSize="18dp" />

                <com.pbt.raadrivers.Fonts.CTextView
                    android:id="@+id/acual_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="right"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="15dp"
                    android:layout_toRightOf="@+id/acual_price1"
                    android:gravity="right"
                    android:text="acual_price"
                    android:textColor="@color/bleck"
                    android:textSize="18dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/discountrel"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.pbt.raadrivers.Fonts.CTextView
                    android:id="@+id/discount1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Customer got discount"
                    android:textColor="@color/bleck"
                    android:textSize="18dp" />

                <com.pbt.raadrivers.Fonts.CTextView
                    android:id="@+id/discount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="right"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="15dp"
                    android:layout_toRightOf="@+id/discount1"
                    android:gravity="right"
                    android:text="acual_price"
                    android:textColor="@color/bleck"
                    android:textSize="18dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.pbt.raadrivers.Fonts.CTextView
                    android:id="@+id/border_tax1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Border tax"
                    android:textColor="@color/bleck"
                    android:textSize="18dp" />

                <com.pbt.raadrivers.Fonts.CTextView
                    android:id="@+id/border_tax"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="right"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="15dp"
                    android:layout_toRightOf="@+id/border_tax1"
                    android:gravity="right"
                    android:text="acual_price"
                    android:textColor="@color/bleck"
                    android:textSize="18dp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.pbt.raadrivers.Fonts.CTextView
                    android:id="@+id/tall_tax1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Toll tax "
                    android:textColor="@color/bleck"
                    android:textSize="18dp" />

                <com.pbt.raadrivers.Fonts.CTextView
                    android:id="@+id/tall_tax"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="right"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="15dp"
                    android:layout_toRightOf="@+id/tall_tax1"
                    android:gravity="right"
                    android:text="acual_price"
                    android:textColor="@color/bleck"
                    android:textSize="18dp" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <com.pbt.raadrivers.Fonts.CTextView
                    android:id="@+id/permission_charger1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Other charge"
                    android:textColor="@color/bleck"
                    android:textSize="18dp" />


                <com.pbt.raadrivers.Fonts.CTextView
                    android:id="@+id/permission_charger"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="right"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="15dp"
                    android:layout_toRightOf="@+id/permission_charger1"
                    android:gravity="right"
                    android:text="acual_price"
                    android:textColor="@color/bleck"
                    android:textSize="18dp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <com.pbt.raadrivers.Fonts.CTextView
                    android:id="@+id/parking_charger1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Parking charge"
                    android:textColor="@color/bleck"
                    android:textSize="18dp" />

                <com.pbt.raadrivers.Fonts.CTextView
                    android:id="@+id/parking_charger"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="right"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="15dp"
                    android:layout_toRightOf="@+id/parking_charger1"
                    android:gravity="right"
                    android:text="acual_price"
                    android:textColor="@color/bleck"
                    android:textSize="18dp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.pbt.raadrivers.Fonts.CTextView
                    android:id="@+id/driver_allowance1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Driver allowances"
                    android:textColor="@color/bleck"
                    android:textSize="18dp" />

                <com.pbt.raadrivers.Fonts.CTextView
                    android:id="@+id/driver_allowance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="right"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="15dp"
                    android:layout_toRightOf="@+id/driver_allowance1"
                    android:gravity="right"
                    android:text="acual_price"
                    android:textColor="@color/bleck"
                    android:textSize="18dp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.pbt.raadrivers.Fonts.CTextView
                    android:id="@+id/driver_night_hold_charge1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Driver night hold charge"
                    android:textColor="@color/bleck"
                    android:textSize="18dp" />

                <com.pbt.raadrivers.Fonts.CTextView
                    android:id="@+id/driver_night_hold_charge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="right"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="15dp"
                    android:layout_toRightOf="@+id/driver_night_hold_charge1"
                    android:gravity="right"
                    android:text="acual_price"
                    android:textColor="@color/bleck"
                    android:textSize="18dp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.pbt.raadrivers.Fonts.CTextView
                    android:id="@+id/titlewalletamount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Customer Wallet Amount"
                    android:textColor="@color/bleck"
                    android:textSize="18dp" />

                <com.pbt.raadrivers.Fonts.CTextView
                    android:id="@+id/textWalletAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="right"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="15dp"
                    android:layout_toRightOf="@+id/titlewalletamount"
                    android:gravity="right"
                    android:text=""
                    android:textColor="@color/bleck"
                    android:textSize="18dp" />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.pbt.raadrivers.Fonts.CTextView
                    android:id="@+id/price112"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Total"
                    android:textColor="@color/bleck"
                    android:textSize="12dp"
                    android:textStyle="bold" />


                <com.pbt.raadrivers.Fonts.CTextView
                    android:id="@+id/price1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="right"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="15dp"
                    android:layout_toRightOf="@+id/price112"
                    android:gravity="right"
                    android:text="acual_price"
                    android:textColor="@color/bleck"
                    android:textSize="12dp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/loutTempAmount"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_5sdp">

                <com.pbt.raadrivers.Fonts.CTextView
                    android:id="@+id/title_payamount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="20dp"
                    android:text="Your Payable Amount"
                    android:textColor="@color/bleck"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="italic|bold" />


                <com.pbt.raadrivers.Fonts.CTextView
                    android:id="@+id/text_temp_payamount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="right"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@+id/title_payamount"
                    android:gravity="right"
                    android:text="acual_price"

                    android:textColor="@color/bleck"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="italic|bold" />

            </RelativeLayout>

            <in.shadowfax.proswipebutton.ProSwipeButton
                android:id="@+id/confirm_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="25dp"
                app:arrow_color="@color/white"
                app:bg_color="@color/startgreen"
                app:btn_text="@string/conpayment" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>