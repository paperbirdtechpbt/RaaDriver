<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_200sdp"
    android:padding="@dimen/_10sdp"
    android:background="@drawable/button_border"
   >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/appred"
            >

            <ImageView
                android:layout_centerHorizontal="true"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_alert"
                android:id="@+id/img_war"
                android:layout_marginTop="@dimen/_20sdp"/>

            <TextView
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_below="@+id/img_war"
                android:layout_width="match_parent"
                android:text="Warning "
                android:textColor="@color/white"
                android:textAlignment="center"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold"
                android:id="@+id/txtwar"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_below="@+id/txtwar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:id="@+id/txtMessage"
                android:text=" You are blocked.Contact to Raa cab service"
                android:textColor="@color/white"
                android:paddingBottom="@dimen/_20sdp"/>


            <View
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_above="@+id/txtok"
                android:layout_marginBottom="0dp"
                android:background="@color/white" />

            <TextView
                android:textStyle="bold"
                android:id="@+id/txtok"
                android:layout_marginTop="@dimen/_6sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:padding="@dimen/_6sdp"
                android:text="OK"
                android:clickable="true"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="@dimen/_13sdp" />


        </RelativeLayout>


</FrameLayout>